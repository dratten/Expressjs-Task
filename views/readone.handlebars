<table>
	<tr>
		<td>Student Number</td>
		<td>First Name</td>
		<td>Surname</td>
		<td>ID Number</td>
		<td>Place of Residence</td>
	</tr>
	{{#each students}}
	<tr>
		<form method="post" action="/update">
		<td><input type="text" name="student_id" readonly value="{{student_id}}"></td>
		<td><input type="text" name="fname" value="{{fname}}"></td>
		<td><input type="text" name="sname" value="{{sname}}"></td>
		<td><input type="text" name="id" value="{{id}}"></td>
		<td><input type="text" name="residence" value="{{residence}}"></td>
		<td><input type="submit" name="submit" value="Edit"></td>
		</form>
		<form method="post" action="/delete/{{student_id}}">
			<td><input type="submit" name="delete" value="Delete"></td>
		</form>
	</tr>
	{{/each}}
</table>